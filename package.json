{
  "name": "my-webpack-project",
  "version": "1.0.0",
  "description": "My webpack project",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "format": "eslint src/**/*.ts --fix",
    "pretty": "prettier --write \"src/**/*.ts\"",
    "dev": "concurrently \"npm run dev:webpack\" \"npm run dev:nodemon\"",
    "dev:webpack": "webpack --watch --mode=development --config webpack.config.js",
    "dev:nodemon": "nodemon --watch dist dist/index.js",
    "build": "webpack --mode=production --config webpack.config.js --node-env=production",
    "start": "node dist/index.js",
    "generate-migration": "rm -rf migrations && drizzle-kit generate:pg --schema src/schema/schema.ts --out migrations",
    "migrate": "node -r esbuild-register src/database/migrator.ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.22.10",
    "@babel/preset-env": "^7.22.10",
    "@babel/preset-typescript": "^7.22.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.5.3",
    "@types/pg": "^8.10.9",
    "@types/webpack": "^5.28.2",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "@webpack-cli/generators": "^3.0.7",
    "babel-loader": "^9.1.3",
    "clean-webpack-plugin": "^4.0.0",
    "concurrently": "^8.2.1",
    "copy-webpack-plugin": "^11.0.0",
    "declaration-bundler-webpack-plugin": "^1.0.3",
    "drizzle-kit": "^0.20.7",
    "esbuild-register": "^3.5.0",
    "eslint": "^8.47.0",
    "husky": "^8.0.3",
    "jest": "^29.6.3",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.2",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.4.4",
    "ts-node": "^10.9.1",
    "tsconfig-paths-webpack-plugin": "^4.1.0",
    "typescript": "^5.1.6",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "webpack-node-externals": "^3.0.0",
    "wepack-cli": "^0.0.1-security"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.29.1",
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "winston": "^3.10.0",
    "winston-daily-rotate-file": "^4.7.1"
  }
}
