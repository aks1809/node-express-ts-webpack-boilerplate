{
    "compilerOptions": {
        "target": "ES6",
        "module": "CommonJS",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "noImplicitAny": true,
        "allowJs": true,
        "baseUrl": "src/",
        "paths": {
            "@utils/*": [
                "utils/*"
            ],
            "@config/*": [
                "config/*"
            ],
            "@database/*": [
                "database/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ]
}